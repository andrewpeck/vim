snippet module "Verilog module"

\`timescale 1ns / 100 ps

module ${1:name} (

);

//----------------------------------------------------------------------------------------------------------------------
endmodule
//----------------------------------------------------------------------------------------------------------------------

endsnippet


snippet case "Verilog case"
case (${1:statement})
    $2 : $3
    default :
endcase
endsnippet

snippet keep "Verilog Keep"
(* keep = "true" *)
endsnippet

snippet function "Verilog function"
module simple_function();

function  ${1:myfunction};
input a, b, c, d;
begin
    $1 = ((a+b) + (c-d));
end
endfunction

endmodule
endsnippet

